<!doctype html>
<html>
<head>
    <title>Job Board</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/7aa840a654.js" crossorigin="anonymous"></script>
</head>
<body class="body">

  <header>
    <h1>Job Board</h1>
  </header>

  <section class="posts">
    <h2>My Posts</h2>
    <ul class="list">
      <% if (job[0].company) { %>
        <% for(var i = 0; i <= job.length-1; i++) { %>
          <!-- <i class="fa fa-trash " aria-hidden="true"></i> -->
          <li>
            <p class="title"> <%= job[i].title  %> </p>
            <p class="company"> <%= job[i].company  %> </p>
            <p class="loc"> <%= job[i].location  %></p>
            <p class="desc"> <%= job[i].description  %></p>

            <% if (job[i].urgent === 'yes') { %>
            <p class="urgent"> Urgently Hiring! %></p>
            <% } %>

          </li>
        <% } %>
      <% } %>
     </ul>
  </section>

  <a href="/profile" class="logout">Back</a>

  <script type="text/javascript" src="main.js">

  </script>
</body>
</html>
