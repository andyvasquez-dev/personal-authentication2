<!doctype html>
<html>
<head>
    <title>Job Board</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>

  <header>
    <h1>Job Board</h1>
  </header>

  <section>
    <input type="text" name="" value="" class="company" placeholder="Company for Employment">
    <input type="text" name="" value="" class="title" placeholder="Job Title">
    <input type="message" name="" value="" class="details" placeholder="Job Description">
    <input type="text" name="" value="" class="location" placeholder="Location">
    <section class="check">
      <label for="name">Urgently Hiring? </label>
      <input type="checkbox" name="urgent" value="" class="urgent">
    </section>
    <button type="button" name="button" class="submit">Submit</button>
  </section>

</body>
</html>
